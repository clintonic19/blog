<div class="admin-title">
    <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">
    <label for="title"><b>Title:</b></label>
    <input type="text" placeholder="Enter title" name="title">

    <div class="col-md-12">
        <label for="title"><b>Description:</b></label>
        <input type="text" placeholder="Enter Description" name="description">
    </div>

    <div class="col-md-12">
        <label for="title"><b>Content Body:</b></label>
        <div class="form-floating mb-3">           
        <textarea type="text" class="form-control" id="body"  placeholder="Enter body" name="body" style="height: 200px;" required></textarea>
        </div>
    </div>

    <!-- <input type="submit" value="Add Post" class="btn"> -->

    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit" validate >Add Post</button>
    </div>
</form>