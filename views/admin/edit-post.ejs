<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>

     <!-- DELETE BUTTON -->
     <form action="/delete-post/<%=data._id %>?_method=DELETE" method="POST" class="position-relative ">
        <input type="submit" value="Delete" class="btn btn-delete">                           
    </form>
</div>

<form action="/edit-post/<%=data._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title:</b></label>
    <input type="text" placeholder="Enter title" name="title" value="<%=data.title %>">

    <div class="col-md-12">
        <label for="title"><b>Description:</b></label>
        <input type="text" placeholder="Enter Description" name="title" value="<%=data.body %>" >
    </div>

    <div class="col-md-12">
        <label for="title"><b>Content Body:</b></label>
        <div class="form-floating mb-3">           
        <textarea type="text" class="form-control" id="body"  placeholder="Enter Content" name="description" style="height: 200px;" required><%= data.title %></textarea>
        </div>
    </div>

    <!-- <input type="submit" value="Add Post" class="btn"> -->

    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit" validate > Update </button>
    </div>
</form>